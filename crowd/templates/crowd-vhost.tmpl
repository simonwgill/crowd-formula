{%- from 'crowd/conf/settings.sls' import crowd with context %}
<VirtualHost {{ crowd.webserver_fqdn }}:80>
    ServerName {{ crowd.webserver_fqdn }}
 
    ProxyRequests Off
    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>
 
    ProxyPass / http://localhost:8090/
    ProxyPassReverse / http://localhost:8090/
    <Location />
        Order allow,deny
        Allow from all
    </Location>
</VirtualHost>
